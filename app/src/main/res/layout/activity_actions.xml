<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/button_gallery_sound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gallery Audio"
        app:layout_constraintBottom_toTopOf="@+id/button_gallery_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_gallery_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gallery Image"
        app:layout_constraintBottom_toTopOf="@+id/button_gallery_video"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_gallery_sound" />

    <Button
        android:id="@+id/button_gallery_video"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gallery Video"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_gallery_image" />
</android.support.constraint.ConstraintLayout>